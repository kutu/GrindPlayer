<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:helpers="ru.kutu.grindplayer.views.skins.helpers.*"
		>
	 
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<helpers:ColorizedBitmapImage
		horizontalCenter="0"
		verticalCenter="0"
		source="@Embed('/../assets/skin/cc.png')"
		color="{getStyle('controlBarIconColor')}"
		color.down="{getStyle('controlBarIconColorOver')}"
		/>
	
	<helpers:HitArea />
	
</s:Skin>
